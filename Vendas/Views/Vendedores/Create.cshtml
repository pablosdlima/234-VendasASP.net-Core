@model Vendas.Models.ViewModels.VendasViewModel;


<h2>Crie um novo vendedor...</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BaseSalarial" class="control-label"></label>
                <input asp-for="Vendedor.BaseSalarial" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Data" class="control-label"></label>
                <input asp-for="Vendedor.Data" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Digite o Id do Departamento</label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentoes,"ID","Nome"))" class="form-control"></select>
                @*<input asp-for="Vendedor.DepartamentoId" class="form-control" />*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-group" />
            </div>
        </form>
    </div>
</div>