@model Vendas.Models.Vendedor

@{
    ViewData["Title"] = "Create";
}

<h2>Crie um novo vendedor...</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalarial" class="control-label"></label>
                <input asp-for="BaseSalarial" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-group" />
            </div>
        </form>
    </div>
</div>