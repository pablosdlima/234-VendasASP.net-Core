<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>
                    Busca Simples
                </legend>
                <div class="form-group">
                    <label for="minData" class="col-lg-2 control-label">Data Minima</label>
